<section class="mt-5">

  <div class="d-flex justify-content-center align-items-center flex-column">
    <header>{{title}}</header>
    <img src="/images/funds/{{imageLink}}" alt="{{description}}" width="85%" height="auto">
    <button class="contribute-button" data-attr={{id}} class="btn btn-sm btn-primary mt-2 w-50"> Contribute </button>
    <p>Target $ {{targetVal}}</p>
    <p>Current contributions ${{contribution.totalMoney}}</p>
    <p>{{description}}</p>
    <p> Last contribution was {{timeElapsed updatedAt}} ago</p>
  </div>
</section>
